{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "metapackages",
    "type": "object",
    "title": "Metapackages Schema",
    "required": [
      "name",
      "display_price",
      "depart_time",
      "multimedia",
      "items"
    ],
    "properties": {
      "name": {
        "$id": "#/properties/name",
        "type": "string",
        "title": "Metapackage name",
        "default": "",
        "examples": [
          "text"
        ],
        "pattern": "^(.*)$"
      },
      "display_price": {
        "$id": "#/properties/display_price",
        "type": "number",
        "title": "Display price",
        "default": 0,
        "examples": [
          20.00
        ]
      },
      "depart_time": {
        "$id": "#/properties/depart_time",
        "type": "string",
        "title": "Range of dates",
        "default": "",
        "examples": [
          "02/27/2020-02-28-2020"
        ],
        "pattern": "^(.*)$"
      },
      "multimedia": {
        "$id": "#/properties/multimedia",
        "type": "array",
        "title": "Multimedia list",
        "items": {
          "$id": "#/properties/multimedia/items",
          "type": "object",
          "title": "Multimedia item",
          "required": [
            "type",
            "url"
          ],
          "properties": {
            "type": {
              "$id": "#/properties/multimedia/items/properties/type",
              "type": "string",
              "title": "type of file (vid / img)",
              "default": "",
              "examples": [
                "img/vid"
              ],
              "pattern": "^(.*)$"
            },
            "url": {
              "$id": "#/properties/multimedia/items/properties/url",
              "type": "string",
              "title": "url of the file",
              "default": "",
              "examples": [
                "https://example.com/myFile.jpg"
              ],
              "pattern": "^(.*)$"
            }
          }
        }
      },
      "items": {
        "$id": "#/properties/items",
        "type": "array",
        "title": "Item list",
        "items": {
          "$id": "#/properties/items/items",
          "type": "object",
          "title": "Metapackage Item",
          "required": [
            "title",
            "icon",
            "description",
            "tags"
          ],
          "properties": {
            "title": {
              "$id": "#/properties/items/items/properties/title",
              "type": "string",
              "title": "The title for the item",
              "default": "",
              "examples": [
                "text"
              ],
              "pattern": "^(.*)$"
            },
            "icon": {
              "$id": "#/properties/items/items/properties/icon",
              "type": "string",
              "title": "The Icon for the item",
              "default": "",
              "examples": [
                "url"
              ],
              "pattern": "^(.*)$"
            },
            "description": {
              "$id": "#/properties/items/items/properties/description",
              "type": "string",
              "title": "The Description for the item",
              "default": "",
              "examples": [
                "text"
              ],
              "pattern": "^(.*)$"
            },
            "tags": {
              "$id": "#/properties/items/items/properties/tags",
              "type": "array",
              "title": "tag list",
              "items": {
                "$id": "#/properties/items/items/properties/tags/items",
                "type": "string",
                "title": "tag item",
                "default": "",
                "examples": [
                  "tag0",
                  "tag1"
                ],
                "pattern": "^(.*)$"
              }
            }
          }
        }
      }
    }
  }